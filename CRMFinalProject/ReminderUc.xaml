<UserControl x:Class="CRMFinalProject.ReminderUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMFinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="615">
    <Grid>
        <Grid.ColumnDefinitions>
           <ColumnDefinition Width="61*"/>
           <ColumnDefinition Width="345*" />
           <ColumnDefinition Width="135*"/>
           <ColumnDefinition Width="74*" />
        </Grid.ColumnDefinitions>
        <Image Source="/AX/Info.png"  Height="25" Width="25"/>
        <Image Source="/AX/reminderwhite.png" Grid.Column="3" Height="25" Width="25"/>
        <TextBlock x:Name="ReminderTitleTxt" Grid.Column="2"  Foreground="#f2F2F2" Text="یادآور نمونه" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Vazir"/>
        <TextBlock x:Name="ReminderInfoTxt" Grid.Column="1"  Foreground="#f2F2F2" Text="جزییات یادآور نمونه " HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Vazir"/>
    </Grid>
</UserControl>
